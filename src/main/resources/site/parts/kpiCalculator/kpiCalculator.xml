<part>
    <display-name>Kpi kalkulator</display-name>
    <form>
        <field-set>
            <label>KPI kalkulator</label>
            <items>
                <input name="kpiCalculatorArticle" type="ContentSelector">
                    <label>Artikkel Kpi kalkulator</label>
                    <occurrences minimum="0" maximum="1" />
                    <config>
                        <allowContentType>article</allowContentType>
                    </config>
                </input>
                <input name="frontPage" type="CheckBox">
                    <label>Bruk p√• Forside</label>
                </input>
                <input type="HtmlArea" name="ingressFrontpage">
                    <label>Ingress kalkulator Forside</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config>
                        <exclude>*</exclude>
                        <include>Bold | Italic | Link | Unlink | Subscript | Superscript</include>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</part>