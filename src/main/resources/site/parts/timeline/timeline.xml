<part>
    <display-name>Tidslinje</display-name>
    <form>
        <item-set name="TimelineItemSet">  
            <label>Tidslinjeelement</label>  
            <occurrences minimum="1" maximum="0"/>  
            <items>
                <input name="year" type="TextLine">
                    <label>År</label>
                    <occurrences minimum="1" maximum="1"/>  
                </input>
                
                <item-set name="event">  
                    <label>Hendelser</label>  
                    <occurrences minimum="0" maximum="0"/>  
                    <items>
                        <input name="title" type="TextLine">
                            <label>Tittel</label>
                            <occurrences minimum="1" maximum="1"/>  
                        </input>
                        <input name="ingress" type="TextLine">
                            <label>Ingress</label>
                            <occurrences minimum="0" maximum="1"/>  
                        </input>
                        <input name="eventText" type="HtmlArea">
                            <label>Tekst</label>
                            <config>
                                <include>Bold Italic Underline Strike Subscript Superscript Cut Copy Blockquote</include>
                                <allowHeadings>h2 h3 h4 h5</allowHeadings>
                            </config>
                        </input>
                        <input name="directorImage" type="ImageSelector">
                            <label>Direktørbilde</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                        <input name="category" type="RadioButton">
                            <label>Hendelsestype</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <option value="statistic">Statistikk</option>
                                <option value="eventSsb">Begivenhet ssb</option>
                                <option value="event">Eksterne begivenheter</option>
                                <option value="director">Direktør</option>
                                <option value="keyfigures">Nøkkeltall</option>
                                <option value="other">Annet</option>
                            </config>
                            <default>eventSsb</default>
                        </input>
                        <input name="article" type="ContentSelector">
                            <label>Artikkel</label>
                            <occurrences minimum="0" maximum="1"/>
                            <config>
                                <allowPath>${site}</allowPath>
                                <allowType>page</allowType>
                                <allowType>article</allowType>
                            </config>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
  </form>
</part>

