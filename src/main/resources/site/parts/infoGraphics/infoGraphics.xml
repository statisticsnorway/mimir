<part>
  <display-name>Infografikk / Visualisering</display-name>
  <description>Inforgrafikk eller visualisering med tittel og beskrivelse</description>
  <form>
    <input name="title" type="TextLine">
      <label>Tittel p√• visualinseringen</label>
      <occurrences minimum="1" maximum="1" />
    </input>

    <input name="image" type="ImageSelector">
      <label>Infografikk eller visualisering</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowPath>${site}</allowPath>
      </config>
    </input>

    <option-set name="checkOptionSet">
      <label>Kildelenke</label>
      <expanded>true</expanded>
      <occurrences minimum="0" maximum="2"/>
      <options minimum="1" maximum="1">
        <option name="urlSource">
          <label>Url lenke</label>
          <default>true</default>
          <help-text>Fri url felt. Legges inn som dette eks. "http://www.ssb.no"</help-text>
          <items>
            <input name="urlText" type="TextLine">
              <label>Tekst til kildelenke</label>
              <occurrences minimum="0" maximum="1" />
            </input>
            <input name="url" type="TextLine">
              <label>Kildelenke</label>
              <occurrences minimum="0" maximum="1" />
            </input>
          </items>
        </option>

        <option name="relatedSource">
          <label>Lenke til internt innhold</label>
          <items>
            <input name="urlText" type="TextLine">
              <label>Tekst til kildelenke</label>
              <occurrences minimum="0" maximum="1" />
            </input>
            <input name="sourceSelector" type="ContentSelector">
              <label>Relatert innhold</label>
              <occurrences minimum="0" maximum="1"/>
              <config/>
            </input>
          </items>
        </option>
      </options>
    </option-set>

    <input name="footNote" type="TextLine">
      <label>Fotnote til bilde</label>
      <occurrences minimum="0" maximum="2" />
    </input>

    <input name="altText" type="TextLine">
      <label>Alternativ tekst til bilde</label>
      <occurrences minimum="1" maximum="1" />
    </input>

    <input name="longDesc" type="TextArea">
      <label>Beskrivende hjelpetekst for blinde</label>
      <default></default>
      <config>
        <max-length>600</max-length>
      </config>
    </input>

  </form>
</part>
