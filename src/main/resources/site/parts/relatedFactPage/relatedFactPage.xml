<part>
  <display-name>Relatert bildeboks</display-name>
  <form>
    <input type="TextLine" name="title">
      <label>Tittel</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="TextLine" name="type">
      <label>Stikktittel</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="itemList" type="ContentSelector">
      <label>Innholdsliste</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <allowPath>${site}</allowPath>
        <allowType>contentList</allowType>
        <treeMode>false</treeMode>
        <description>Henter alt innhold i listen og lager lenker av de.</description>
      </config>
    </input>
  </form>
</part>
