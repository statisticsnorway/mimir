<?xml version="1.0" encoding="UTF-8"?>
<part>
  <display-name>SSB Text</display-name>
    <super-type>base:structured</super-type>
      <description></description>
        <form>
          <input type="RadioButton" name="textType">
            <label>Tekst type</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
              <option name="brodtekst">Br√∏dtekst</option>
              <option name="ingress">Ingress</option>
              <option name="mikrotekst">Mikrotekst</option>
            </config>
          </input>
          <input type="HtmlArea" name="text">
            <label>Tekst</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <exclude>*</exclude>
                <include>
                    Bold Italic Underline |
                    JustifyBlock JustifyLeft JustifyCenter JustifyRight |
                    BulletedList NumberedList Outdent Indent |
                    Link Unlink |
                    PasteModeSwitcher |
                    Strike Subscript Superscript
                </include>
            </config>
        </input>
    </form>
</part>
