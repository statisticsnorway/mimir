<?xml version="1.0" encoding="UTF-8"?>
<site>
  <form>
    <field-set>
      <label>Header og meny</label>
      <items>

        <input name="searchResultPageId" type="ContentSelector">
          <label>Søkeresultat side</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>page</allowContentType>
            <treeMode>true</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>true</hideToggleIcon>
          </config>
        </input>

        <item-set name="topLinks">
          <label>Topp lenker</label>
          <expanded>false</expanded>
          <occurrences minimum="0" maximum="0"/>
          <items>

            <input type="TextLine" name="linkTitle">
              <label>Lenketittel</label>
              <occurrences minimum="1" maximum="1"/>
            </input>

            <option-set name="urlSrc">
              <label>Lenkemål</label>
              <expanded>false</expanded>
              <occurrences minimum="0" maximum="1"/>
              <options minimum="1" maximum="1">
                <option name="manual">
                  <label>Url lenke</label>
                  <default>true</default>
                  <help-text>Fri url felt. Legges inn som dette eks. "http://www.ssb.no"</help-text>
                  <items>
                    <input name="url" type="TextLine">
                      <label>Kildelenke</label>
                      <occurrences minimum="0" maximum="1"/>
                    </input>
                  </items>
                </option>

                <option name="content">
                  <label>Lenke til internt innhold</label>
                  <items>
                    <input name="contentId" type="ContentSelector">
                      <label>Relatert innhold</label>
                      <occurrences minimum="0" maximum="1"/>
                      <config/>
                    </input>
                  </items>
                </option>
              </options>
            </option-set>
          </items>
        </item-set>
      </items>
    </field-set>

    <field-set>
      <label>Footer</label>
      <items>

        <item-set name="bottomLinks">
          <label>Bunn lenker</label>
          <expanded>false</expanded>
          <occurrences minimum="0" maximum="0"/>
          <items>

            <input type="TextLine" name="linkTitle">
              <label>Lenketittel</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="linkTitleEN">
              <label>Lenketittel Engelsk</label>
              <occurrences minimum="1" maximum="1"/>
            </input>

            <option-set name="urlSrc">
              <label>Lenkemål</label>
              <expanded>false</expanded>
              <occurrences minimum="0" maximum="1"/>
              <options minimum="1" maximum="1">
                <option name="manual">
                  <label>Url lenke</label>
                  <default>true</default>
                  <help-text>Fri url felt. Legges inn som dette eks. "http://www.ssb.no"</help-text>
                  <items>
                    <input name="url" type="TextLine">
                      <label>Kildelenke</label>
                      <occurrences minimum="0" maximum="1"/>
                    </input>
                  </items>
                </option>

                <option name="content">
                  <label>Lenke til internt innhold</label>
                  <items>
                    <input name="contentId" type="ContentSelector">
                      <label>Relatert innhold</label>
                      <occurrences minimum="0" maximum="1"/>
                      <config/>
                    </input>
                  </items>
                </option>
              </options>
            </option-set>

            <option-set name="urlSrcEN">
              <label>Lenkemål Engelsk</label>
              <expanded>false</expanded>
              <occurrences minimum="0" maximum="1"/>
              <options minimum="1" maximum="1">
                <option name="manual">
                  <label>Url lenke</label>
                  <default>true</default>
                  <help-text>Fri url felt. Legges inn som dette eks. "http://www.ssb.no"</help-text>
                  <items>
                    <input name="url" type="TextLine">
                      <label>Kildelenke</label>
                      <occurrences minimum="0" maximum="1"/>
                    </input>
                  </items>
                </option>

                <option name="content">
                  <label>Lenke til internt innhold</label>
                  <items>
                    <input name="contentId" type="ContentSelector">
                      <label>Relatert innhold</label>
                      <occurrences minimum="0" maximum="1"/>
                      <config/>
                    </input>
                  </items>
                </option>
              </options>
            </option-set>
          </items>
        </item-set>
      </items>
    </field-set>

    <field-set>
      <label>Kommunefakta</label>
      <items>
        <input name="municipalDataContentId" type="ContentSelector">
          <label>Kommunedata innhold fra api</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>dataquery</allowContentType>
            <treeMode>true</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>true</hideToggleIcon>
          </config>
        </input>
        <input name="countyDataContentId" type="ContentSelector">
          <label>Fylkedata innhold fra api</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>dataquery</allowContentType>
            <treeMode>true</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>true</hideToggleIcon>
          </config>
        </input>
        <input name="municipalChangeListContentId" type="ContentSelector">
          <label>Endringslister fra api</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>dataquery</allowContentType>
            <treeMode>true</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>false</hideToggleIcon>
          </config>
        </input>
        <input type="TextLine" name="defaultMunicipality">
          <label>Standard kommune for å vise i "preview" mode</label>
          <occurrences minimum="1" maximum="1"/>
          <default>0101</default>
        </input>
        <input type="CustomSelector" name="defaultMunicipality2">
          <label>Velg hvilken kommuner det gjelder her.</label>
          <help-text>Varselet vil bare synes på valgte kommuner under /kommunefakta.</help-text>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <service>customSelectorMunicipals</service>
          </config>
        </input>
        <item-set name="kommunefakta">
          <label>Kommunefakta instillinger</label>
          <occurrences minimum="0" maximum="1"/>
          <items>
            <input type="TextLine" name="mapfolder">
              <label>Mappe kartfiler</label>
              <occurrences minimum="0" maximum="1"/>
              <default>/mapdata</default>
            </input>
          </items>
        </item-set>
      </items>
    </field-set>
    <item-set name="language">
      <label>Språk instillinger</label>
      <expanded>false</expanded>
      <occurrences minimum="1" maximum="2"/>
      <items>
        <input name="label" type="TextLine">
          <label>Språktittel (brukt til lenke i header)</label>
          <occurrences minimum="1" maximum="1"/>
          <default>Norsk (Bokmål)</default>
        </input>
        <input name="code" type="TextLine">
          <label>Språkkode (f.eks. "en", "no")</label>
          <occurrences minimum="1" maximum="1"/>
          <default>nb</default>
        </input>
        <input name="link" type="TextLine">
          <label>Språklenke: url-stien til språkets "hjemmeside"</label>
          <help-text>Typisk "/en" for engelsk. La feltet stå tomt om den skal peke til norsk utgaven.
          </help-text>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="phrases" type="RadioButton">
          <label>Språk tekst/fraser</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <option value="norwegian">phrases/phrases_no</option>
            <option value="english">phrases_en</option>
          </config>
          <default>norwegian</default>
        </input>
        <input name="homePageId" type="ContentSelector">
          <label>Språkets "Hjem"-side</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <treeMode>false</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>false</hideToggleIcon>
          </config>
        </input>
        <input name="menuContentId" type="ContentSelector">
          <label>Meny</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <allowContentType>menuitem</allowContentType>
            <treeMode>false</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>false</hideToggleIcon>
          </config>
        </input>
        <input name="footerContentId" type="ContentSelector">
          <label>Footer</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <allowContentType>menuitem</allowContentType>
            <treeMode>false</treeMode>
            <showStatus>true</showStatus>
            <hideToggleIcon>false</hideToggleIcon>
          </config>
        </input>
      </items>
    </item-set>
    <field-set>
      <label>Nettstedrouting (mappings)</label>
      <items>
        <item-set name="router">
          <label>Routing</label>
          <expanded>false</expanded>
          <occurrences minimum="0" maximum="0"/>
          <items>
            <input name="source" type="ContentSelector">
              <label>Fra</label>
              <help-text>
                Alle spørringer etter denne kontrolleren vil bli sendt til valgt kontroller under.
                Så fremt det ikke finnes et eskisterende innhold.
              </help-text>
              <occurrences minimum="1" maximum="1"/>
              <config>
                <treeMode>true</treeMode>
                <showStatus>true</showStatus>
                <hideToggleIcon>false</hideToggleIcon>
              </config>
            </input>
            <input name="target" type="ContentSelector">
              <label>Til</label>
              <help-text>Hvor spørringene skal lande.</help-text>
              <occurrences minimum="1" maximum="1"/>
              <config>
                <treeMode>true</treeMode>
                <showStatus>true</showStatus>
                <hideToggleIcon>false</hideToggleIcon>
              </config>
            </input>
            <input name="pageTitle" type="TextLine">
              <label>Sidetittel på rutede sider</label>
              <occurrences minimum="0" maximum="1"/>
              <default></default>
            </input>
          </items>
        </item-set>
      </items>
    </field-set>
  </form>
  <mappings>
    <mapping filter="/site/filters/router.js" order="10">
      <pattern>/.*</pattern>
    </mapping>
    <mapping controller="/site/pages/default/default.js">
      <match>type:'portal:fragment'</match>
    </mapping>
  </mappings>
</site>
