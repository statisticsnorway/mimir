<macro>
  <display-name>Nøkkeltall i løpende tekst</display-name>
  <form>
    <input name="keyFigure" type="ContentSelector">
      <label>Nøkkeltall</label>
      <occurrences minimum="0" maximum="1" />
      <config>
        <allowPath>${site}</allowPath>
        <allowContentType>keyFigure</allowContentType>
      </config>
    </input>
    <input name="text" type="TextLine">
      <label>Tekst</label>
      <help-text>Her kan man bruke variabler for å vise dynamisk data. De tilgjengelige variablene er [tittel], [tid], [tall], [benevning] og [endringstekst].</help-text>
      <occurrences minimum="0" maximum="1" />
    </input>
  </form>
</macro>
