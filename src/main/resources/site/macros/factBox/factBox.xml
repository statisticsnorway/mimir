<macro>
    <display-name>Faktaboks (ExpansionBox)</display-name>
    <description></description>
    <form>
        <input name="factBox" type="ContentSelector">
            <label>Ekspansjonsboks</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowPath>${site}</allowPath>
                <allowType>factBox</allowType>
            </config>
        </input>
        <field-set>
			<label>
				Faktaboks fritekst
			</label>
			<items>
				<input name="factBoxTitle" type="TextLine">
                    <occurrences minimum="0" maximum="1" />
                    <label>
                        Tittel
                    </label>
                </input>
                <input name="factBoxText" type="TextArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>
                        Tekst
                    </label>
                </input>
			</items>
		</field-set>
    </form>
</macro>
