<content-type>
    <display-name>Om statistikken</display-name>
    <description>Innhold Om statistikken</description>
    <super-type>base:structured</super-type>
    <form>
        <field-set>
            <label>Ingress</label>
            <items>
                <input name="ingress" type="TextArea">
                    <occurrences minimum="1" maximum="1" />
                    <label>Ingress</label>
                </input>
            </items>
        </field-set>

        <item-set name="definition">
            <label>Definisjoner</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input name="conceptsAndVariables" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Definisjoner av viktige begrep og variabler</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="standardRatings" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Standard klassifikasjoner</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
            </items>
        </item-set>

        <item-set name="administrativeInformation">
            <label>Administrative opplysninger</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input name="regionalLevel" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Regionalt nivå</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="frequency" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Hyppighet og aktualitet</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="internationalReporting" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Internasjonal rapportering</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="storageAndUse" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Lagring og anvendelse av grunnlagsmaterialet</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
            </items>
        </item-set>

        <item-set name="background">
            <label>Bakgrunn</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input name="purposeAndHistory" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Formål og historie</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="usersAndUse" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Brukere og bruksområder</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="EqualTreatmentUsers" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Likebehandling av brukere</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="RelationOtherStatistics" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Sammenheng med annen statistikk</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="legalAuthority" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Lovhjemmel</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="EeaReference" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>EØS-referanse</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
            </items>
        </item-set>

        <item-set name="production">
            <label>Produksjon</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input name="scope" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Omfang</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="dataSourcesAndSamples" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Datakilder og utvalg</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="DataCollectionEditingAndCalculations" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Datainnsamling, editering og beregninger</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="seasonalAdjustment" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Sesongjustering</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="confidentiality" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Konfidensialitet</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="comparability" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Sammenlignbarhet over tid og sted</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
            </items>
        </item-set>

        <item-set name="accuracyAndReliability">
            <label>Nøyaktighet og pålitelighet</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input name="errorSources" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Feilkilder og usikkerhet</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
                <input name="revision" type="HtmlArea">
                    <occurrences minimum="0" maximum="1" />
                    <label>Revisjon</label>
                    <config>
                        <allowHeadings>h3</allowHeadings>
                    </config>
                </input>
            </items>
        </item-set>

        <field-set>
            <label>Relevant dokumentasjon</label>
            <items>
                <option-set name="relevantDocumentation">
                    <label>Dokumentasjon</label>
                    <expanded>false</expanded>
                    <occurrences minimum="0" maximum="0"/>
                    <options minimum="1" maximum="1">
                        <option name="content">
                            <label>Innhold XP</label>
                            <default>true</default>
                            <items>
                                <input name="article" type="ContentSelector">
                                    <label>Artikkel</label>
                                    <occurrences minimum="1" maximum="1"/>
                                    <config>
                                        <allowContentType>${app}:article</allowContentType>
                                    </config>
                                </input>
                            </items>
                        </option>
                        <option name="externalLink">
                            <label>Lenke til innhold</label>
                            <items>
                                <input name="url" type="TextLine">
                                    <label>URL</label>
                                    <occurrences minimum="1" maximum="1"/>
                                </input>
                                <input name="title" type="TextLine">
                                    <label>Tittel</label>
                                    <occurrences minimum="1" maximum="1"/>
                                </input>
                            </items>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>


    </form>
</content-type>
