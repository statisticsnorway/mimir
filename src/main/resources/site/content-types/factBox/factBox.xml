<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Faktaboks</display-name>
    <super-type>base:structured</super-type>
    <description></description>
    <form>
        <input type="HtmlArea" name="text">
            <label>Tekst</label>
            <occurrences minimum="1" maximum="1"/>
