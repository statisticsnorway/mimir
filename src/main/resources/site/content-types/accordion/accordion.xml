<content-type>
  <display-name>Trekkspill</display-name>
  <super-type>base:structured</super-type>
  <allow-child-content>true</allow-child-content>
  <form>
    <item-set name="accordions">
      <label>Trekkspill</label>
      <occurrences minimum="1" maximum="0"/>
      <items>
        <input name="open" type="TextLine">
          <label>Tekst til åpne-knapp</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="body" type="HtmlArea">
          <label>Innhold</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <item-set name="items">
          <occurrences minimum="0" maximum="0"/>
          <label>Underpunkt</label>
          <items>
            <input type="TextLine" name="title">
              <label>Tekst til åpneknapp</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input type="HtmlArea" name="body">
              <label>Brødtekst</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
        </item-set>
      </items>
    </item-set>
  </form>
</content-type>
