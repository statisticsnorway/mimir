<content-type>
  <display-name>Datasett fra Statistikkbanken</display-name>
  <super-type>base:structured</super-type>
  <allow-child-content>true</allow-child-content>
  <form>
    <input name="table" type="TextLine">
      <label>Tabell</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="query" type="ContentSelector">
      <label>Spørring Statistikkbanken</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowPath>${site}</allowPath>
        <allowType>statistikkbanken</allowType>
      </config>
    </input>
    <input name="json" type="TextArea">
      <label>Resultat fra spørring i JSON-format</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</content-type>
