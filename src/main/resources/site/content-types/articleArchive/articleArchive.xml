<content-type>
    <display-name>Artikkel- og publikasjonsarkiv</display-name>
    <super-type>base:structured</super-type>
    <form>
        <input name="preamble" type="TextArea">
            <label>Ingress</label>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="image" type="ImageSelector">
            <label>Bilde</label>
            <occurrences minimum="0" maximum="1" />
        </input>
        <input name="freeText" type="HtmlArea">
            <label>Fritekst</label>
            <config>
                <include>
                    Bold Italic Underline Strike Subscript Superscript Cut Copy Blockquote
                </include>
            </config>
            <occurrences minimum="0" maximum="1" />
        </input>

        <input name="issnNumber" type="TextLine">
            <label>ISSN-nummer</label>
            <occurrences minimum="0" maximum="1" />
        </input>
    </form>
</content-type>
