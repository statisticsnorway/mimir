<mixin>
    <display-name>Kilder</display-name>
    <form>
        <option-set name="sources">
            <label>Kildelenke</label>
            <expanded>true</expanded>
            <occurrences minimum="0" maximum="0"/>
            <options minimum="1" maximum="1">
                <option name="urlSource">
                    <label>Url lenke</label>
                    <default>true</default>
                    <help-text>Fri url felt. Legges inn som dette eks. "http://www.ssb.no"</help-text>
                    <items>
                        <input name="urlText" type="TextLine">
                            <label>Tekst til kildelenke</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <input name="url" type="TextLine">
                            <label>Kildelenke</label>
                            <occurrences minimum="0" maximum="1" />
                            <default>https://</default>
                        </input>
                    </items>
                </option>

                <option name="relatedSource">
                    <label>Lenke til internt innhold</label>
                    <items>
                        <input name="urlText" type="TextLine">
                            <label>Tekst til kildelenke</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <input name="sourceSelector" type="ContentSelector">
                            <label>Relatert innhold</label>
                            <occurrences minimum="0" maximum="1"/>
                            <config/>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
    </form>
</mixin>
