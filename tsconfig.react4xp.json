{
  "compilerOptions": {
      "jsx": "react",
      "lib": [
          "DOM",
          "ES2015",
      ],
      "moduleResolution": "node",
      "paths": {
        "/lib/enonic/react4xp": ["node_modules/@enonic-types/lib-react4xp"],
        "/*": ["src/main/resources/*"],
      },
      "skipLibCheck": true,
      "target": "ES2015",
      "typeRoots": [
        "node_modules/@types",
        "node_modules/@enonic-types"
      ]
  },
  "include": [
      "./src/main/resources/**/*.tsx"
  ],
}