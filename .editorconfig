root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 120

[*.ts]
ij_typescript_use_double_quotes = false
ij_typescript_use_semicolon_after_statement = false
ij_visual_guides = none

[*.md]
trim_trailing_whitespace = false
