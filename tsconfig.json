{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": ["ES5", "ES6"],
    "types": [
      "node",
      "@item-enonic-types/global"
    ],
    "rootDirs": [
      "./src/main/resources",
      "./.xp-codegen"
    ],
    "paths": {
      "/admin/*": ["./src/main/resources/admin/*"],
      "/lib/xp/*": ["./node_modules/@enonic-types/lib-*"],
      "/lib/enonic/react4xp": ["./node_modules/@enonic-types/lib-react4xp"],
      "/lib/*": [ "./node_modules/@item-enonic-types/lib-*" ,"./src/main/resources/lib/*"],
      "/react4xp/*": ["./src/main/resources/react4xp/*"],
      "/services/*": ["./src/main/resources/services/*"],
      "/site/*": [
        "./.xp-codegen/site/*",
        "./src/main/resources/site/*"
      ],
      "/tasks/*": [
        "./.xp-codegen/tasks/*",
        "./src/main/resources/tasks/*"
      ],
    }
  },
  "include": [
    "./.xp-codegen/**/*",
    "./src/main/resources/**/*"
  ],
  "exclude": ["./build/*"]
}