{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": ["ES5", "ES6"],
    "types": [
      "types",
      "node",
      "enonic-types"
    ],
    "baseUrl": "./src/main/resources",
    "paths": {
      "/lib/*": ["lib/*"]
    }
  },
  "types": [
    "types"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
